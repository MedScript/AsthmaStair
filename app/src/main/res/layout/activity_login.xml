<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/_textPass"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:hint="  Password"
        android:layout_marginBottom="336dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="12sp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/_textUser"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="220dp"
        android:hint="  E-mail"
        android:layout_marginEnd="29dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toTopOf="@+id/_btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_textPass"
        app:layout_editor_absoluteX="160dp"
        app:layout_editor_absoluteY="500dp" />


    <Button
        android:id="@+id/_btnLogin"
        android:layout_width="145dp"
        android:layout_height="54dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="66dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>